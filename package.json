    "@lit-labs/router": "^0.1.4",
    "@logtail/js": "^0.5.5",
    "@logtail/pino": "^0.5.5",
    "@neondatabase/serverless": "^1.0.1",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "dotenv": "^16.4.5",
    "effect": "^3.16.9",
    "elysia": "^1.3.5",
    "haunted": "^6.1.0",
    "kysely": "^0.28.2",
    "kysely-neon": "^1.1.1",
    "lit": "^3.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "urlpattern-polyfill": "^10.1.0",
    "vite": "^7.0.0",
    "ws": "^8.18.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
